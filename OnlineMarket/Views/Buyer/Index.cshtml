@model IEnumerable<OnlineMarket.Models.Buyer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" border="1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchasedProducts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transactions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserProfile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchasedProducts)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Transactions)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserProfile)
                </td>
                <td>
                    <a class="btn btn-sm btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-sm btn-dark" asp-action="Address" asp-route-id="@item.Id">Address</a> |
                    <a class="btn btn-sm btn-danger" onclick="DeleteCustomer('@item.Id')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="~/js/Branch/Branch_CRUD.js"></script>

<link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
